@model IEnumerable<GyakorlasraWebApp.Models.CharacterModel>
<div class="card-columns">
    @foreach (var item in Model)
    {
        string format = "";
        @if (item.Side == GyakorlasraWebApp.Models.CharacterSide.good)
        {
            format = "card text-white bg-dark mb-3";
        }
        else
        {
            format = "card text-white bg-dark mb-3";
        }
        <div class="@format">
            <img class="card-img-top rounded-top" src="~/HeroImages/@item.ImageUrl" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">@item.Name</h5>
                <p class="card-text">@item.Description</p>
            </div>
            <div class="card-footer">
                @*<small class="text-muted">Last updated 3 mins ago</small>*@
                <div class="progress">

                    @if (item.Side == GyakorlasraWebApp.Models.CharacterSide.good)
                    {
                        <div class="progress-bar bg-success" role="progressbar" style="width: @item.Power.ToString()%" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
                    }
                    else
                    {

                        <div class="progress-bar bg-danger" role="progressbar" style="width: @item.Power.ToString()%" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
                    }

                </div>
                <br />
                <div class="progress">
                    <div class="progress-bar bg-info" role="progressbar" style="width: @item.Speed.ToString()%" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
                <div>
                    <br />
                    @Html.ActionLink("Edit hero", "Edit", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-secondary" })
                    @Html.ActionLink("Play hero", "Play", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-warning" })
                    @*<button type="button" class="btn btn-light">Light</button>*@
                </div>
            </div>
        </div>
    }

</div>
